import React from "react";
import { Card, CardContent, CardHeader, CardTitle } from "@/components/ui/card";
import { Button } from "@/components/ui/button";
import { Lightbulb } from "lucide-react";

const quickPrompts = [
  {
    title: "Building Self-Respect",
    prompt: "How can I help my child develop healthy self-respect and confidence without becoming arrogant?"
  },
  {
    title: "Learning from Mistakes",
    prompt: "My child made a mistake. How can I help them learn from it instead of just punishing them?"
  },
  {
    title: "Equal Treatment",
    prompt: "How do I treat my children equally while respecting their individual differences and needs?"
  },
  {
    title: "Positive Discipline",
    prompt: "What are some effective positive discipline strategies that don't involve punishment or isolation?"
  },
  {
    title: "Communication",
    prompt: "How can I improve communication with my child so they feel heard and understood?"
  },
  {
    title: "Age-Appropriate Expectations",
    prompt: "What are realistic expectations for my child's behavior and development at their age?"
  }
];

export default function QuickPrompts({ onPromptSelect }) {
  return (
    <Card className="bg-white/80 backdrop-blur-sm border-0 shadow-lg">
      <CardHeader>
        <CardTitle className="flex items-center gap-2 text-lg">
          <Lightbulb className="w-5 h-5 text-yellow-500" />
          Quick Questions
        </CardTitle>
      </CardHeader>
      <CardContent className="space-y-2">
        {quickPrompts.map((prompt, index) => (
          <Button
            key={index}
            variant="ghost"
            className="w-full text-left justify-start h-auto p-3 hover:bg-gradient-to-r hover:from-blue-50 hover:to-purple-50 border border-transparent hover:border-blue-200"
            onClick={() => onPromptSelect(prompt.prompt)}
          >
            <div>
              <div className="font-medium text-sm text-gray-900 mb-1">
                {prompt.title}
              </div>
              <div className="text-xs text-gray-600 line-clamp-2">
                {prompt.prompt}
              </div>
            </div>
          </Button>
        ))}
      </CardContent>
    </Card>
  );
}